def input_data() :
    s= input( "\nEnter Server Name : " )
    d= input( "\nEnter Database Name : " )
    u= input( "\nEnter Username : " )
    p= input( "\nEnter Password : " )

    #using format() - implicit
    return "Servername = {} ;Database Name = {} ;Username = {} ;Password= {}" .format(s,d,u,p)

    #using string modulo op
    #return "Servername = %s ;Database Name = %s ;Username = %s ;Password= %s" %(s,d,u,p)
    
print("Given Data : ",input_data())
